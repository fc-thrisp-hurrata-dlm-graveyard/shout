= form_for(@forum, :url => admin_forums_path) do |f|
  - if @forum.errors.any?
    #error_explanation
      %h2
        = pluralize(@forum.errors.count, "error")
        prohibited this forum from being saved:
      %ul
        - @forum.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
